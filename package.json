{
	"name": "cantrips",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"db:setup": "wrangler d1 execute cantrips-dealtracker-db --local --file=migrations/0001_init.sql && wrangler d1 execute cantrips-dealtracker-db --local --file=migrations/seed.sql",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"deploy": "vite build && wrangler deploy",
		"deploy:cron": "cd cron && wrangler deploy"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20260210.0",
		"@internationalized/date": "^3.10.0",
		"@lucide/svelte": "^0.561.0",
		"@sveltejs/adapter-cloudflare": "^6.0.0",
		"@sveltejs/kit": "^2.50.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/vite": "^4.1.18",
		"@tanstack/table-core": "^8.21.3",
		"bits-ui": "^2.14.4",
		"clsx": "^2.1.1",
		"formsnap": "^2.0.1",
		"mode-watcher": "^1.1.0",
		"svelte": "^5.49.2",
		"svelte-check": "^4.3.6",
		"svelte-sonner": "^1.0.7",
		"sveltekit-superforms": "^2.28.1",
		"tailwind-merge": "^3.4.0",
		"tailwind-variants": "^3.2.2",
		"tailwindcss": "^4.1.18",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"vite": "^7.3.1",
		"wrangler": "^4.0.0"
	},
	"dependencies": {
		"better-auth": "^1.4.18",
		"chart.js": "^4.5.1",
		"chartjs-adapter-date-fns": "^3.0.0",
		"drizzle-orm": "^0.41.0"
	}
}
